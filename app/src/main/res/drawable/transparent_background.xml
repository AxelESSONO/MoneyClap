<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/teal_900"
                android:endColor="@color/teal_700"
                android:startColor="#0F026C"
                android:type="linear" />
            <size
                android:width="24dp"
                android:height="24dp" />

            <corners android:radius="3dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>