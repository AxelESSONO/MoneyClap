<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edouardondo.moneyklap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/money_clap"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/money_clap"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyClap"
        android:usesCleartextTraffic="true">
        <activity android:name=".controller.activity.RateActivity"></activity>
        <activity android:name=".controller.activity.SignUpActivity"></activity>
        <activity android:name=".controller.activity.TransactionDetailActivity"></activity>
        <activity
            android:name=".controller.activity.EditDevisActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MoneyClap.NoActionBar"></activity>
        <activity
            android:name=".controller.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MoneyClap.NoActionBar"></activity>
        <activity
            android:name=".controller.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>